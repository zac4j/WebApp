<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <data>

    <variable
      name="fragment"
      type="zac4j.com.webapp.HomeFragment" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
      android:id="@+id/file_chooser"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="@{fragment::onClick}"
      android:text="@string/file_chooser_title"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/js_hook"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="@{fragment::onClick}"
      android:text="@string/js_hook_title"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/js_binding"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="@{fragment::onClick}"
      android:text="@string/js_binding_title"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/pdf_viewer"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="@{fragment::onClick}"
      android:text="@string/pdf_viewer_title"
      android:textAllCaps="false" />
  </LinearLayout>
</layout>